cd $STRAP_SOURCES

msg "Extracting binutils..."

tar -xf ./binutils-2.34.tar.xz

mkdir -p $STRAP_SOURCES/binutils-build 

cd $STRAP_SOURCES/binutils-build

msg "Configure binutils..."

../binutils-2.34/configure               \
	--prefix=${STRAP_ROOTFS}/cross-tools \
	--target=${STRAP_TARGET}             \
	--with-sysroot=${STAP_ROOTFS}        \
	--disable-nls                        \
    --disable-multilib

msg "Configure host..."

make configure-host

msg "Compile binutils..."

make -j${PNUM}

msg "Install binutils..."

make -j${PNUM} install

msg "Cleaning up binutils..."

rm -rf $STRAP_SOURCES/binutils-2.34 $STRAP_SOURCES/binutils-build