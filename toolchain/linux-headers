init_stage

msg "Extracting linux..."

tar -xf ./linux-5.7.tar.xz

cd linux-5.7

make mrproper

make ARCH=${STRAP_KARCH} headers_check

make ARCH=${STRAP_KARCH} INSTALL_HDR_PATH=dest headers_install

find dest/include -name '.*' -delete

mkdir -p ${STRAP_ROOTFS}/usr/include

cp -rv dest/include/* ${STRAP_ROOTFS}/usr/include

asdfasdfasdf

msg "Cleaning up..."

rm -rf $STRAP_SOURCES/linux-5.7