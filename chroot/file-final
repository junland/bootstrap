cd $STRAP_SOURCES/file-5.38

cat "${CWD}/chroot/files/config.guess" > config.guess

cat "${CWD}/chroot/files/config.sub" > config.sub

msg "Configure file-final..."

./configure \
 --prefix=/usr \
 --build=$STRAP_HOST \
 --host=$STRAP_TARGET \
 --target=$STRAP_TARGET \
 --disable-fsect-man5

msg "Building file-final..."

make -j${PNUM} V=1

msg "Installing file-final..."

make -j${PNUM} DESTDIR=${STRAP_ROOTFS} install

msg "Cleaning up file-final..."

rm -rf $STRAP_SOURCES/file-*/